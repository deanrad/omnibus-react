{
  "name": "omnibus-react",
  "version": "0.0.9",
  "license": "MIT",
  "author": "Dean Radcliffe",
  "repository": "https://github.com/deanrad/omnibus-react",
  "main": "dist/omnibus-react.min.js",
  "module": "dist/omnibus-react.esm.js",
  "typings": "dist/tsc/types/src/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "npm run example:debounced",
    "example:debounced": "cd example/debounced-search; parcel index.html",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts --fix .",
    "test": "yarn test:fast",
    "test:fast": "jest",
    "test:watch": "jest --verbose=false --watch",
    "test:coverage": "jest --coverage",
    "test:quiet": "jest --silent --reporters=jest-silent-reporter",
    "test:full": "yarn test:fast && yarn test:quiet && echo 'Retest successful' && yarn lint && yarn build",
    "size": "size-limit",
    "doc": "typedoc",
    "doctoc": "doctoc .",
    "docs:commit": "yarn doc && git add docs/ && git commit -m 'Update docs' -n",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js"
  },
  "size-limit": [
    {
      "path": "dist/omnibus-react.esm.js",
      "limit": "10 kB"
    }
  ],
  "jest": {
    "verbose": true,
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "testEnvironment": "jsdom"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ],
    "plugins": []
  },
  "dependencies": {
    "omnibus-rxjs": "^0.9.7",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.15.0",
    "@open-wc/building-rollup": "^1.10.0",
    "@phenomnomnominal/tsquery": "^4.1.1",
    "@rollup/plugin-typescript": "^8.2.5",
    "@size-limit/preset-small-lib": "^5.0.3",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.0.6",
    "deepmerge": "^4.2.2",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "^7.0.2",
    "jest": "^27.0.6",
    "jest-silent-reporter": "^0.5.0",
    "react": "16.8.0",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.2",
    "rxjs": "^7.3.0",
    "size-limit": "^5.0.3",
    "tiny-invariant": "^1.1.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.5",
    "typescript-fsa": "^3.0.0"
  },
  "peerDependencies": {
    "omnibus-rxjs": ">=0.9.3",
    "react": ">=16.8.1"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
